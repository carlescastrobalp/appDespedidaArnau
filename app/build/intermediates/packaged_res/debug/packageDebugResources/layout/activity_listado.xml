<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Botón Nuevas -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNuevas"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/logica_button"
        android:fontFamily="@font/harry_potter"
        android:padding="12dp"
        android:text="Nuevas"
        android:textColor="#F6E2B3"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110" />

    <!-- Botón Completadas -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCompletadas"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/logica_button"
        android:fontFamily="@font/harry_potter"
        android:padding="12dp"
        android:text="Completadas"
        android:textColor="#F6E2B3"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110" />

    <!-- Botón Rechazadas -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRechazadas"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/logica_button"
        android:fontFamily="@font/harry_potter"
        android:padding="12dp"
        android:text="Rechazadas"
        android:textColor="#F6E2B3"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewListado"
        android:layout_width="400dp"
        android:layout_height="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.800" />


</androidx.constraintlayout.widget.ConstraintLayout>