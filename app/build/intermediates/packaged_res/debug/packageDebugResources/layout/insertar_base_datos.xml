<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Grupo RadioButton para prueba o pregunta -->
    <RadioGroup
        android:id="@+id/radioGroupTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.150">

        <RadioButton
            android:id="@+id/rbPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta"
            android:textColor="#F6E2B3"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rbPrueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:textColor="#F6E2B3"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGroupNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.300" >

    <RadioButton
        android:id="@+id/rbNivel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivell baix"
        android:textColor="#F6E2B3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rbNivel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivell mig"
            android:textColor="#F6E2B3"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rbNivel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivell alt"
            android:textColor="#F6E2B3"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

    <!-- Campo de descripción -->

    <EditText
        android:id="@+id/textDescripcion"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="Escriu aquí putero"
        android:textColorHint="#F6E2B3"
        android:textColor="#F6E2B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.480"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_insert"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/logica_button"
        android:fontFamily="@font/harry_potter"
        android:text="Enviar"
        android:textColor="#F6E2B3"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.860" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verListado"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:background="@drawable/logica_button"
        android:fontFamily="@font/harry_potter"
        android:text="Veure el llistat"
        android:textColor="#F6E2B3"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.730"/>

    <Spinner
        android:id="@+id/spinnerPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/gent"
        android:textColor="#F6E2B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.440"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.520" />

    <TextView
        android:id="@+id/eligeVictima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegeix la Victima"
        android:textColor="#F6E2B3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.060"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.520"/>

</androidx.constraintlayout.widget.ConstraintLayout>